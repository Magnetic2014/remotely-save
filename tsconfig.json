{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "es2020",
      "es2015", 
      "scripthost",
      "webworker"
    ],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/global.d.ts", 
    "**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}
